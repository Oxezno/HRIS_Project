@model HRIS_Project.Models.MessagesCl

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Messages</h2>

<p>
    @Html.ActionLink("Create New Message", "Index", new { id = 0, mode = "Create" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSend)
        </th>
        <th>
            From
        </th>
        <th>
            To
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.MessageList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recruitment.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Index", new { id = item.idMessage, mode = "Edit" }) |
                @Html.ActionLink("Details", "Index", new { id = item.idMessage, mode = "Details" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idMessage}, new { onclick = "return confirm('Are you sure you wish to delete this Message?');" })
            </td>
        </tr>
    }

</table>


@{
    if (Model.MessageList != null)
    {
        if (Model.DisplayMode == "Edit")
        {
            Html.RenderPartial("_Messages/_EditMessages", Model.SelectedMessage);
        }
        if (Model.DisplayMode == "Details")
        {
            Html.RenderPartial("_Messages/_DetailsMessages", Model.SelectedMessage);
        }
        if (Model.DisplayMode == "Create")
        {
            Html.RenderPartial("_Messages/_CreateMessages");
        }


    }
}