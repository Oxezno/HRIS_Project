@model HRIS_Project.Models.CompaniesCl
@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Companies</h2>

<p>  
    @Html.ActionLink("Create New Company", "Index", new { id = 0, mode = "Create" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.CompaniesList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
      
        <td>
            @Html.ActionLink("Edit", "Index", new { id = item.idCompany, mode = "Edit" }) |
            @Html.ActionLink("Details", "Index", new { id = item.idCompany, mode = "Details" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idCompany }, new { onclick = "return confirm('Are you sure you wish to delete this Company?');" })
            
        </td>
    </tr>
}

</table>

@{
    if (Model.CompaniesList != null)
    {
        if (Model.DisplayMode == "Edit")
        {
            Html.RenderPartial("_Companies/_EditCompanies", Model.SelectedCompany);
        }
        if (Model.DisplayMode == "Details")
        {
            Html.RenderPartial("_Companies/_DetailsCompanies", Model.SelectedCompany);
        }
        if (Model.DisplayMode == "Create")
        {
            Html.RenderPartial("_Companies/_CreateCompanies");
        }


    }
}