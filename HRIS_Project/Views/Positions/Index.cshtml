@model HRIS_Project.Models.PositionsCl

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Positions</h2>

<p>
    @Html.ActionLink("Create New Position", "Index", new { id = 0, mode = "Create" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PositionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>    
        <th>
            Company
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.PositionList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PositionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>      
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Index", new { id = item.idPosition, mode = "Edit" }) |
            @Html.ActionLink("Details", "Index", new { id = item.idPosition, mode = "Details" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idPosition }, new { onclick = "return confirm('Are you sure you wish to delete this Position?');" })
        </td>
    </tr>
}

</table>
@{
    if (Model.PositionList != null)
    {
        if (Model.DisplayMode == "Edit")
        {
            Html.RenderPartial("_Position/_EditPosition", Model.SelectedPosition);
        }
        if (Model.DisplayMode == "Details")
        {
            Html.RenderPartial("_Position/_DetailsPosition", Model.SelectedPosition);
        }
        if (Model.DisplayMode == "Create")
        {
            Html.RenderPartial("_Position/_CreatePosition");
        }


    }
}