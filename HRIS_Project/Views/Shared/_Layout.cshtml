<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--div style="text-align:center;">
                <img src="Images/header.jpg" height="100" />
            </div-->
            <div class="navbar-header">
                
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Companies", "Index", "Companies")</li>
                    <li>@Html.ActionLink("Positions", "Index", "Positions")</li>
                    <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                    <li>@Html.ActionLink("Messages", "Index", "Messages")</li>
                    <li>@Html.ActionLink("Recruiters", "Index", "Recruitments")</li>
                    <li>@Html.ActionLink("Reports", "Reports", "Home")</li>
                    <img src="~/images/hr_header.jpg" alt="Smiley face" height="42" >
                    <li>@Html.ActionLink("Logout", "Logout", "Logout")</li>
                </ul>
            </div>
            <div style="color:#ffffff">
                Welcome: @Session["UserName"].ToString()
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Human Resource Information System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
